#!/usr/bin/env python

import yaml
import jinja2
from slugify import slugify 
from html5print import HTMLBeautifier
import datetime

jinja_env = jinja2.Environment(
  autoescape = True,
  loader = jinja2.FileSystemLoader( searchpath = "./" )
)

def slug(value):
    return slugify( value )
jinja_env.filters['slug'] = slug

def parrafos(value):
    """ Remover ultimo salto de linea """
    li = value.rsplit('\n', 1)
    return ''.join(li)
jinja_env.filters['parrafos'] = parrafos

template = jinja_env.get_template( 'base.html' )
template.globals['now'] = datetime.datetime.utcnow

contenido = yaml.load(
  open( 'contenido.yml', 'r' ),
  Loader = yaml.FullLoader
)

feo =  template.render( contenido = contenido ) 
lindo = HTMLBeautifier.beautify( feo, 2)
with open( 'index.html', "w" ) as tex:
  tex.write( lindo )

